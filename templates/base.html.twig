<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css"></link>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
            <img src="{{ asset('build/images/tv-screen.png') }}" alt="ACME logo" style="max-width: 50px; max-height: 50px">
            </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a href="{{ path('category_index') }}" class="nav-link" href="#">Categories
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="{{ path('program_index') }}" class="nav-link" href="#">Programs
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="{{ path('actor_index') }}" class="nav-link" href="#">Actors
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
            </ul>
            {% if app.user %}
                <div>
                    <h5>Hello {{ app.user.email }} !</h5>
                    <button class="btn-light" style="margin: 5px;"><a href="{{ path('user') }}"> Mon espace</a></button>
                    <button class="btn-light" style="margin: 5px;"><a href="{{ path('app_logout') }}"> Se d√©connecter</a></button>
                </div>
            {% else %}
                <button class="btn-light" style="margin: 5px;"><a href="{{ path('app_login') }}"> Se connecter</a></button>
                <button class="btn-light" style="margin: 5px;"><a href="{{ path('app_register') }}"> S'inscrire</a></button>
            {% endif %}
        </div>
    </nav>
        {% block body %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
