{% extends "base.html.twig" %}

{% block title %}Série #{{ program.id }}{% endblock %}
{% block body %}
    <div class="media" style="max-width: 100%">
        <img class="align-self-start mr-3" style="max-width: 66%" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div>
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>
            {% for season in seasons %}
                <li><a href="{{ path("program_season_show", {programSlug: program.slug, seasonId: season.id}) }}">Saison {{ season.id }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>

    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path('actor_show', {id: actor.id}) }}">{{ actor.name }} </a></li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}